<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0c0c0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_bg"
        android:orientation="vertical"
        android:paddingTop="12dp" >

        <CheckBox
            android:id="@+id/check_btn_quick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Send your identity to NTV"
            android:textColor="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp" >

            <EditText
                android:id="@+id/txt_body_quick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:background="#fffff0"
                android:ems="10"
                android:hint="What&apos;s happening?"
                android:lines="5"
                android:padding="10dp"
                android:textColor="#000000" />
            <!-- android:background="@drawable/rounded_et_land" -->

            <Button
                android:id="@+id/btn_camera_quick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_menu_camera" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:weightSum="100" >

            <Button
                android:id="@+id/btn_cancel_quick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/my_gray_button"
                android:padding="0dp"
                android:text="Cancel"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_submit_quick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:background="@drawable/reg_btn"
                android:padding="0dp"
                android:text="Submit Story"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>